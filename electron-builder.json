{
  "appId": "com.portfoliomanager.app",
  "productName": "Stock Portfolio Manager",
  "copyright": "Copyright Â© 2026 AsG Labs",
  "asar": false,
  "directories": {
    "output": "dist",
    "buildResources": "assets"
  },
  "files": [
    "build/**/*",
    "src/main/**/*",
    "node_modules/**/*",
    "package.json",
    "!public/**/*",
    "!node_modules/.cache/**/*",
    "!node_modules/electron/**/*",
    "!node_modules/electron-builder/**/*"
  ],
  "extraFiles": [
    {
      "from": "BSEScripMaster.txt",
      "to": "BSEScripMaster.txt"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico",
    "publisherName": "AsG Labs",
    "verifyUpdateCodeSignature": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Stock Portfolio Manager",
    "include": "assets/installer.nsh"
  },
  "publish": null,
  "buildVersion": "1.0.0"
}
